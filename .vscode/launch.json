
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "args": ["-test.v"],
            "buildFlags": "-gcflags='all=-N -l'",
            "env": {
                "ENVIRONMENT_NAME": "local"
            },
            "showLog": true
        },
        {
            "name": "Test Package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/${relativeFileDirname}",
            "args": ["-test.v"],
            "buildFlags": "-gcflags='all=-N -l'",
            "env": {
                "ENVIRONMENT_NAME": "local"
            },
            "showLog": true
        },
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "args": [
                "serve"
            ],
            "env": {
                "ENVIRONMENT_NAME": "local"
            },
            "showLog": true
        }
    ]
}
